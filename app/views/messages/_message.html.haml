.main-list__chat{data: {id: "#{message.id}"}}
  .main-list__chat__name
    = message.user.name
  .main-list__chat__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-list__text
  - if message.content.present?
    = message.content
  = image_tag message.image.url, class: 'main-list__text__image' if message.image.present?



