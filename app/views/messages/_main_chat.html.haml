.main
  .main-info
    .main-info__group
      .main-info__group__name
        = @group.name
      .main-info__group-fix
      Member :
        .main-info__group-fix__member
          %ul
            - @group.users.each do |user|
              = user.name
    = link_to "edit", class: "main-info-edit" do
      Edit

  .main-list
    = render @messages
    
  .main__form
    = form_for [@group, @message] do |f|
      .new_message__box
        = f.text_field :content, class: 'new_message__box__message',placeholder: "type a message"
        = f.label :image, class: "new_message__box__picture" do
          = fa_icon 'image'
          = f.file_field :image
      = f.submit 'Send', class:'main__form__btn'

  