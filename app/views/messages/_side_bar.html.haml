.side
  .side__user
    .side__user-items
      %h3.side__user-items__name
        =current_user.name
      .side__user-items__icons
        = link_to new_group_path, class: "side__user-items__icon" do
          = fa_icon 'edit', class: 'side__user-items__edit'
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'side__user-items__cog'
  .side__group
    - current_user.groups.each do |group|
      .side__group__box
        = link_to group_messages_path(group) do
          .side__group__box__name 
            = group.name
          .side__group__box__chat 
            = group.show_last_message